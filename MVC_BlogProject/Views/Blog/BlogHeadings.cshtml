
@using EntityLayer.Concrete
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Heading>
@{
    ViewBag.Title = "BlogHeadings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
            <!-- Post preview-->
            @foreach (var item in Model)
            {
                <div class="post-preview">
                    <a href="/Blog/BlogDetail/@item.HeadingID">
                        <h2 class="post-title">@item.HeadingName</h2>
                        @*<p class="post-subtitle"> @item.HeadingDescription.Substring(0,70) ...</p>*@
                    </a>
                    <p class="post-meta">
                        Yazar:
                        <a href="#!">@item.Blogger.BloggerName</a>
                        @item.HeadingDate
                    </p>
                </div>
                <!-- Divider-->
                <hr class="my-4" />
                <!-- Post preview-->
            }


            @Html.PagedListPager((IPagedList)Model,p=>Url.Action("BlogHeadings",new { p}),new PagedListRenderOptions
       { 
       LiElementClasses=new List<string> { "page-link"}
       })
            <!-- Pager-->
            @*<div class="d-flex justify-content-end mb-4"><a class="btn btn-primary text-uppercase" href="#!">Older Posts →</a></div>*@
        </div>
    </div>
</div>