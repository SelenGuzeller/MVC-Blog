@using EntityLayer.Concrete
@model List<Heading>
@{
    ViewBag.Title = "MyHeading";
    Layout = "~/Views/Shared/_CreateLayout.cshtml";
}

<h2>Blog Yazılarım</h2>

<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">

                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Başlık İşlemleri</h3>
                <div class="card-tools">

                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 30%">
                                Başlık
                            </th>
                            <th style="width: 30%">
                                Yazar
                            </th>
                            <th style="width: 10%">
                                Tür
                            </th>
                            @*<th style="width: 8%" class="text-center">
                                    Tür
                                </th>*@
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                </td>
                                <td>
                                    @item.HeadingName@*.Substring(0,20) ...*@


                                    <br />

                                </td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            @item.Blogger.BloggerName
                                        </li>
                                    </ul>
                                </td>

                                <td class="project-state">
                                    <span>@item.Category.CategoryName</span>
                                </td>
                                @*<td class="project-state">
                                        <span>@item.Blogger.BloggerName</span>
                                    </td>*@
                                <td class="project-actions text-right">

                                    <a class="btn btn-info btn-sm" href="/BloggerPanel/EditBlog/@item.HeadingID">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="/BloggerPanel/DeleteBlog/@item.HeadingID">
                                        <i class="fas fa-trash">
                                        </i>
                                        Sil
                                    </a>


                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
</body>
</html>
<a href="/BloggerPanel/NewBlog/" class="btn btn-secondary">Yeni Blog Ekle</a>
